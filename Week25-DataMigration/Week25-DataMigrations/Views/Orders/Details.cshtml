@model Week25_DataMigrations.Models.Order

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Order</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.DateCreated)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateCreated)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.DateDispatched)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateDispatched)
        </dd>

    </dl>

    <dl>
        @foreach (var orderItem in @Model.OrderItems)
        {
            <dt>@orderItem.Product.Name</dt>
            <dd>@orderItem.Product.Price</dd>
        }
    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.OrderId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
